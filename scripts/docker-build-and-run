#!/bin/bash

DJANGO_SETTINGS_MODULE=hub.production
docker build --build-arg DJANGO_SETTINGS_MODULE=$DJANGO_SETTINGS_MODULE --tag india-ultimate/hub .
docker run --env DJANGO_SETTINGS_MODULE=$DJANGO_SETTINGS_MODULE --env RAZORPAY_KEY_ID="$RAZORPAY_KEY_ID" --env RAZORPAY_KEY_SECRET="$RAZORPAY_KEY_SECRET" --env SECURE_SSL_REDIRECT=0 -p 127.0.0.1:80:80  -it india-ultimate/hub
